generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  STAFF
  DRIVER
}

enum PermissionType {
  ASSIGN_VEHICLE
  ASSIGN_MATERIAL
  UNASSIGN_VEHICLE
  UNASSIGN_MATERIAL
}

model Permission {
  id    String           @id @default(uuid())
  type  PermissionType   @unique
  users UserPermission[]
}

model UserPermission {
  id           String     @id @default(uuid())
  user         User       @relation(fields: [userId], references: [id])
  userId       String
  permission   Permission @relation(fields: [permissionId], references: [id])
  permissionId String
}

model User {
  id          String             @id @default(uuid())
  name        String
  email       String             @unique
  password    String
  type        UserType
  vehicles    AssignedVehicle[]
  materials   AssignedMaterial[]
  permissions UserPermission[]
}

model Vehicle {
  id          String            @id @default(uuid())
  model       String
  plateNumber String            @unique
  assignedTo  AssignedVehicle[]
}

model Material {
  id          String             @id @default(uuid())
  name        String
  description String
  assignedTo  AssignedMaterial[]
}

model AssignedVehicle {
  id           String    @id @default(uuid())
  user         User      @relation(fields: [userId], references: [id])
  userId       String
  vehicle      Vehicle   @relation(fields: [vehicleId], references: [id])
  vehicleId    String
  assignedAt   DateTime  @default(now())
  unassignedAt DateTime?
}

model AssignedMaterial {
  id           String    @id @default(uuid())
  user         User      @relation(fields: [userId], references: [id])
  userId       String
  material     Material  @relation(fields: [materialId], references: [id])
  materialId   String
  assignedAt   DateTime  @default(now())
  unassignedAt DateTime?
}
